<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" href="./style.css">
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> {% block stylesheets %}{% endblock %}{% block javascripts %}{% endblock %}
		</head>
		<body>
			{# We place the flash messages here #}
			{% for message in app.flashes('danger') %}
				<div class="alert error-warning" role="alert">
					<p>
						<strong>Oupsy!</strong>
					</p>
					{{ message }}
				</div>
			{% endfor %}
			{% for message in app.flashes('success') %}
				<div class="alert success-warning" role="alert">
					<p>
						<strong>Nice!</strong>
					</p>
					{{ message }}
				</div>
			{% endfor %}

			{% block body %}{% endblock %}
		</body>
	</html>
